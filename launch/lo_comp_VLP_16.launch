<launch>
    
    <param name="scan_line" type="int" value="16" />

    <!-- if 1, do mapping 10 Hz, if 2, do mapping 5 Hz. Suggest to use 1, it will adjust frequence automaticlly -->
    <param name="mapping_skip_frame" type="int" value="1" />

    <!-- remove too closed points -->
    <param name="minimum_range" type="double" value="0.1"/>

    <param name="mapping_line_resolution" type="double" value="0.2"/>
    <param name="mapping_plane_resolution" type="double" value="0.4"/>

    <param name="mapviz_filter_size" type="double" value="0.1"/>

    <!-- SC-A-LOAM -->
    <param name="keyframe_meter_gap" type="double" value="1.0"/> 
    <param name="keyframe_deg_gap" type="double" value="10.0"/> 

    <!-- Scan Context -->
    <param name="sc_dist_thres" type="double" value="0.2"/> <!-- SC-A-LOAM, if want no outliers, use 0.1-0.15 -->
    <param name="sc_max_radius" type="double" value="40.0"/> <!-- 20 or 40 for indoor -->
    <!-- <param name="sc_max_radius" type="double" value="80.0"/> for outdoor -->

    <!--  -->
    <param name="lidar_type" type="string" value="VLP16"/> 
    <remap from="/velodyne_points" to="/velodyne_points"/>
    <param name="save_directory" type="string" value="$(find scaloam_velodyne)/result/"/> 
    
    <!-- nodes -->
    <node pkg="scaloam_velodyne" type="scascanRegistration" name="scascanRegistration" output="screen" />
    <node pkg="sp_a_loam_ros" type="scan_registration_node" name="scan_registration_node" output="screen" />
    <node pkg="scaloam_velodyne" type="scalaserOdometry" name="scalaserOdometry" output="screen" />
    <node pkg="sp_a_loam_ros" type="laser_odometry_node" name="laser_odometry_node" output="screen" />
    <!-- <node pkg="scaloam_velodyne" type="scalaserMapping" name="scalaserMapping" output="screen" />
    <node pkg="scaloam_velodyne" type="scalaserPGO" name="scalaserPGO" output="screen" /> -->
    <node pkg="rosbag" type="play" name="player" output="screen" args="--clock -lq /root/docker_ws/ros/catkin_ws/src/LOAM-Family_Study/bag/nsh_indoor_outdoor.bag"/>

    <!-- visulaization -->
    <arg name="rviz" default="true" />
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find sp_a_loam_ros)/rviz/laser_odometry.rviz" />
    </group>

</launch>
